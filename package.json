{
  "name": "typedconf",
  "version": "1.0.0",
  "description": "Properly typed configuration for your TypeScript project",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/Aderinom/typedconf.git"
  },
  "keywords": [
    "typescript",
    "configuration",
    "typed",
    "config"
  ],
  "source": "./src/index.ts",
  "main": "./dist/typedconf.cjs",
  "module": "./dist/typedconf.module.js",
  "unpkg": "./dist/typedconf.umd.js",
  "exports": {
    "types": "./dist/src/index.d.ts",
    "require": "./dist/typedconf.cjs",
    "umd": "./dist/typedconf.umd.js",
    "default": "./dist/typedconf.modern.js"
  },
  "devDependencies": {
    "@types/jest": "~29.2",
    "@types/node": "~18.14.2",
    "@typescript-eslint/eslint-plugin": "~5.44",
    "@typescript-eslint/parser": "~5.44",
    "eslint": "~8.28",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-jest": "~27.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "~29.3",
    "jest-junit": "^15.0.0",
    "microbundle": "^0.15.1",
    "prettier": "~2.8",
    "release-it": "^15.7.0",
    "rimraf": "~3.0",
    "ts-jest": "~29.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsutils": "~3.21",
    "typescript": "~4.9"
  },
  "scripts": {
    "build": "microbundle",
    "build:watch": "microbundle watch",
    "build:release": "rimraf dist && microbundle --tsconfig ./tsconfig.release.json",
    "--------------": "",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "--------------  ": "",
    "release": "release-it",
    "-------------- ": "",
    "prepublishOnly": "pnpm run test && pnpm run build:release",
    "clean": "rimraf coverage dist tmp",
    "lint": "eslint . --ext .ts --ext .mts",
    "prettier": "prettier --config .prettierrc --write ."
  },
  "dependencies": {
    "tslib": "~2.4"
  },
  "packageManager": "pnpm@7.25.0",
  "release-it": {
    "github": {
      "release": true
    }
  },
  "author": "Aaron Kelbsch",
  "license": "MIT"
}
