{
  "name": "tconf",
  "version": "1.0.0",
  "author": "Aaron Kelbsch",
  "description": "Properly typed configuration for your TypeScript project",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./dist/tconf.cjs",
  "module": "./dist/tconf.module.js",
  "unpkg": "./dist/tconf.umd.js",
  "types": "./dist/tconf.d.ts",
  "exports": {
    "require": "./dist/tconf.cjs",
    "default": "./dist/tconf.modern.js"
  },
  "devDependencies": {
    "@types/jest": "~29.2",
    "@types/node": "~18",
    "@typescript-eslint/eslint-plugin": "~5.44",
    "@typescript-eslint/parser": "~5.44",
    "eslint": "~8.28",
    "eslint-config-prettier": "~8.5.0",
    "eslint-plugin-jest": "~27.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "~29.3",
    "microbundle": "^0.15.1",
    "prettier": "~2.8",
    "rimraf": "~3.0",
    "ts-jest": "~29.0",
    "tsutils": "~3.21",
    "typescript": "~4.9"
  },
  "scripts": {
    "build": "microbundle",
    "build:watch": "microbundle watch",
    "build:release": "microbundle watch --tsconfig ./tsconfig.release.json",
    "clean": "rimraf coverage dist tmp",
    "prebuild": "npm run lint",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "tslib": "~2.4"
  }
}
